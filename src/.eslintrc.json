    {
    "env": {
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended","airbnb-base"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-console": "warn",
        "semi": [
            "error",
            "always"
        ],
        "quotes" : "off",
        "import/no-extraneous-dependencies": ["error", {
            "devDependencies": [
              "db/**", // tape, common npm pattern
              "server.js"
              ]}]
    }
}