{
    "extends": "airbnb",
    "env": {
        "es6": true,
        "browser": true
    },
    "rules": {
        "linebreak-style" : 1,
        "no-param-reassign" : 1,
        "react/forbid-prop-types": 1,
        "no-nested-ternary" : 1,
        "max-len": "off",
        "jsx-a11y/href-no-hash": "off",
        "jsx-a11y/anchor-is-valid": ["off", { "aspects": ["invalidHref"] }],
        "indent": [
            "error",
            2
        ],
        "no-console": "warn",
        "semi": [
            "error",
            "always"
        ],
        "quotes" : "off",
        "import/no-extraneous-dependencies": ["error", {
            "devDependencies": [
              "db/**", // tape, common npm pattern
              "server.js"
              ]}]
    }
}